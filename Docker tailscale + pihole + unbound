version: "3.9"

services:
  tailscale:
    image: tailscale/tailscale:stable
    container_name: tailscale
    hostname: pihole-node
    cap_add:
      - NET_ADMIN
      - NET_RAW
    devices:
      - /dev/net/tun:/dev/net/tun
    sysctls:
      - net.ipv4.ip_forward=1
      - net.ipv6.conf.all.forwarding=1
    environment:
      - TS_AUTHKEY=tskey-auth-          ###   change this
      - TS_STATE_DIR=/var/lib/tailscale
      - TS_USERSPACE=false
      - TS_ROUTES=192.168.0.0/24   # advertise your LAN subnet
      - TS_EXTRA_ARGS=--advertise-exit-node --accept-dns=true 
    volumes:
      - ./tailscale-data:/var/lib/tailscale
      - /dev/net/tun:/dev/net/tun
    restart: unless-stopped

  unbound:
    image: mvance/unbound:latest
    container_name: unbound      ###make sure to make folder .unbound/unbound.conf
    network_mode: "service:tailscale"   ## shares Tailscale namespace add 127.0.0.1#5335
    volumes:
      - ./unbound/unbound.conf:/opt/unbound/etc/unbound/unbound.conf:ro
    restart: unless-stopped

  pihole:
    image: pihole/pihole:latest
    container_name: pihole
    network_mode: "service:tailscale"   # same IP as Tailscale
    depends_on:
      - tailscale
      - unbound
    environment:
      - TZ=Asia/Singapore
      - WEBPASSWORD=changeme
    volumes:
      - ./etc-pihole:/etc/pihole
      - ./etc-dnsmasq.d:/etc/dnsmasq.d
    restart: unless-stopped
    
    
#####    
